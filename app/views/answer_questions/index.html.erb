<div class="w-full">
  <%= form_tag(answer_questions_path, method: "get", class: "flex items-center p-4 bg-white rounded-lg") do %>
      <%= text_field_tag(:query, params[:query], class: "flex-grow p-2 text-sm text-gray-700 rounded-l-lg focus:outline-none") %>
      <button type="submit" class="p-2 bg-blue-500 text-white rounded-r-lg">
        Search
      </button>
  <% end %>
  <ol class="mt-4 space-y-2">
    <%@answer_questions.each_with_index do |answer_question, index| %>
      <li class="p-4 bg-white rounded-lg">
        <b> <%=index +1 %>. </b>
        Класс: <%=answer_question.answer_class %> <%=answer_question.question %> <b>score</b>:
        <%=answer_question.score %>
        <p><%=answer_question.attributes %></p>
      </li>
    <%end %>
  </ol>
</div>
